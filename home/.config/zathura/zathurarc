set default-bg "#4c566a"
set font "Noto Mono for Powerline 11"
set recolor-darkcolor "#e5e9f0"
set recolor-lightcolor "#1e222a"
set synctex true
set synctex-editor-command "nvr --remote-silent %f -c %l"
set guioptions none
set completion-fg "#e5e9f0"
set completion-highlight-bg "#8fbcbb"
set completion-highlight-fg "#232323"
set highlight-color "#8fbcbb66"
set highlight-active-color "#5e81ac66"
set index-fg "#e5e9f0"
set index-bg "#1e222a"
set window-title-home-tilde false
set window-title-basename false

map <C-n> navigate next
map <C-r> navigate previous

map <C-c> recolor
map <C-s> toggle_statusbar
map <C-a> rotate rotate-cw

map <C-i> zoom in
map <C-e> zoom out

map i toggle_index

map n search forward
map N search backward

map [index] i toggle_index
map [index] t navigate_index collapse
map [index] n navigate_index down
map [index] r navigate_index up
map [index] h navigate_index expand

map [presentation] n navigate next
map [presentation] r navigate previous
map [normal] p toggle_presentation
map [presentation] p toggle_presentation
