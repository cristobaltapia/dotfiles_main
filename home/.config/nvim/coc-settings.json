{
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": true,
  "diagnostic.maxWindowWidth": 80,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "plugged/MySnippets/Ultisnips",
    "~/Templates/ultisnips-templates"
  ],
  // Python
  "pyright.enable": true,
  "python.formatting.provider": "yapf",
  "markdownlint.config": {
    "default": true,
    "MD013": false,
    "MD003": false
  },
  "html.enable": true,
  "html.filetypes": ["html"],
  "python.formatting.yapfPath": "yapf",
  "python.formatting.blackPath": "black",
  "pyright.inlayHints.enable": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.prospectorEnabled": false,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.pydocstyleArgs": ["--convention=numpy"],
  "python.linting.lintOnSave": true,
  "python.linting.maxNumberOfProblems": 200,
  "pyright.inlayHints.variableTypes": false,
  "pyright.inlayHints.functionReturnTypes": false,
  "python.venvPath": "/home/tapia/.virtualenvs",
  "pyright.organizeimports.provider": "isort",
  "pydocstring.enable": true,
  "pydocstring.formatter": "numpy"
  "suggest.labelMaxLength": 25,
  "suggest.detailMaxLength": 100,
  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": true,
  "suggest.fixInsertedWord": true,
  "suggest.autoTrigger": "always",
  "suggest.snippetIndicator": "[+]",
  "suggest.timeout": 1000,
  "suggest.removeDuplicateItems": true,
  "coc.source.file.enable": true,
  "coc.source.vimtex.enable": false,
  "suggest.pumFloatConfig": {
    "border": true,
    "rounded": true
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true
  },
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.completionItemKindLabels": {
    "default": "",
    "text": "", // 
    "method": "", // 
    "function": "", // ƒ
    "constructor": "", // 
    "field": "", // 料  
    "variable": "", //  
    "class": "", // ﴯ  
    "interface": "", // 
    "module": "", // 
    "property": "", // ﰠ
    "unit": "", //  塞
    "value": "",
    "enum": "", // 
    "keyword": "", // 
    "snippet": "", //    
    "color": "",
    "file": "", // 
    "reference": "", //  渚
    "folder": "", // 
    "enumMember": "", // 
    "constant": "", // 
    "struct": "פּ", // 
    "event": "", // 鬒
    "operator": "Ψ", // 
    "typeParameter": "" //   
  },
  "coc.source.around.enable": true,
  "coc.preferences.useQuickfixForLocations": true,
  "texlab.auxDirectory": "aux-folder",
  "texlab.build.onSave": false,
  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.completion": true,
  "yaml.hover": true,
  "coc.source.ultisnips.enable": true,
  "coc.source.ultisnips.filetypes": [
    "python",
    "tex",
    "latex",
    "julia",
    "bash",
    "markdown",
    "markdown.pandoc",
    "css",
    "bib",
    "make",
    "javascript",
    "vim",
    "vimwiki",
    "wiki",
    "snippets"
  ],
  "highlight.colors.enable": false,
  "highlight.document.enable": false,
  "highlight.colorNames.enable": false,
  "highlight.disableLanguages": ["tex"],
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "session.directory": "~/.vim/sessions",
  "yank.highlight.enable": false,
  "yank.enableCompletion": false,
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "make"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["eruby", "bib"]
    },
    "fortran": {
      "command": "fortls",
      "filetypes": ["fortran"],
      "rootPatterns": [".fortls", ".git/"]
    },
  }
}
