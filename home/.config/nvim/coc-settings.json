{
    "coc.preferences.diagnostic.displayByAle": false,
    "snippets.ultisnips.enable": true,
    "snippets.loadFromExtensions": true,
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "plugged/MySnippets/Ultisnips",
        "~/Templates/ultisnips-templates"
    ],
    // Python
    "python.formatting.provider": "black",
    "markdownlint.config": {
        "default": true,
        "MD013": false,
        "MD003": false
    },
    "python.formatting.blackPath": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.prospectorEnabled": false,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": [
        "--convention=numpy"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 200,
    "python.terminal.executeInFileDir": true,
    "python.venvFolders": [
        ".virtualenvs",
        "venv"
    ],
    "python.venvPath": "~/.virtualenvs",
    "python.jediEnabled": false,
    "suggest.enablePreview": true,
    "suggest.minTriggerInputLength": 2,
    "suggest.fixInsertedWord": true,
    "suggest.autoTrigger": "always",
    "coc.source.file.enable": true,
    "coc.source.vimtex.enable": false,
    "coc.source.around.enable": true,
    "coc.source.ultisnips.enable": true,
    "coc.source.ultisnips.filetypes": [
        "python",
        "tex",
        "julia",
        "bash",
        "markdown",
        "markdown.pandoc",
        "css",
        "bib",
        "make",
        "javascript",
        "vim",
        "snippets"
    ],
    "highlight.colors.enable": true,
    "highlight.document.enable": false,
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "session.directory": "~/.vim/sessions",
    "yank.highlight.enable": false,
    "yank.enableCompletion": false,
    "coc.preferences.diagnostics.displayByAle": false,
    "languageserver": {
        "julia": {
            "command": "/usr/bin/julia",
            "args": [
                "--startup-file=no",
                "--history-file=no",
                "-e",
                "using LanguageServer; using Pkg; import StaticLint; import SymbolServer; env_path = dirname(Pkg.Types.Context().env.project_file); debug = false; server = LanguageServer.LanguageServerInstance(stdin, stdout, debug, env_path, \"\", Dict()); server.runlinter = true; run(server);"
            ],
            "filetypes": [
                "julia"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            // custom config path
            // "args": ["-c", "/path/to/your/config.yaml"],
            "filetypes": [
                "vim",
                "eruby"
            ]
        }
    }
}
